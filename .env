# This is a sample .env file for configuring the application settings.
# API Settings
APP_API_HOST=0.0.0.0
APP_API_PORT=8000

# Redis Connection Settings
APP_REDIS_HOST=localhost
APP_REDIS_PORT=6379
APP_REDIS_DB=0
APP_REDIS_PASSWORD=
APP_REDIS_MAX_CONNECTIONS=10
APP_REDIS_SSL=False

# Logging Settings
APP_LOG_LEVEL=info
APP_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Redis Cluster Settings
APP_REDIS_CLUSTER_ENABLED=False
APP_REDIS_CLUSTER_NODES=localhost:7000,localhost:7001,localhost:7002